#:kivy 2.3.1
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import dp kivy.metrics.dp

<HomeScreen>:
    name: "dashboard"
    MDBoxLayout:
        orientation: "vertical"
        padding: [dp(40), dp(40), dp(40), dp(40)]
        spacing: dp(30)
        md_bg_color: get_color_from_hex("#F5F6FA")

        MDLabel:
            text: "Bienvenu(e) sur K'iosk"
            font_size: "32sp"
            bold: True
            size_hint_y: 0.2
            halign: "center"
            theme_text_color: "Primary"

        MDCard:
            orientation: "vertical"
            padding: dp(24)
            size_hint: None, None
            size: dp(600), dp(260)
            elevation: 8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: get_color_from_hex("#FFFFFF")

            MDGridLayout:
                cols: 2
                spacing: dp(20)
                size_hint_y: None
                height: dp(180)

                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.root.current = "ventes"
                    MDButtonIcon:
                        icon: "cash-register"
                    MDButtonText:
                        text: "Nouvelle Vente"

                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.root.current = "produits"
                    MDButtonIcon:
                        icon: "package-variant"
                    MDButtonText:
                        text: "Gestion des Produits"

                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.root.current = "clients"
                    MDButtonIcon:
                        icon: "account-group"
                    MDButtonText:
                        text: "Gestion des Clients"

                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.root.current = "clients"
                    MDButtonIcon:
                        icon: "chart-bar"
                    MDButtonText:
                        text: "Statistiques"

                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_release: app.root.current = "login"
                    MDButtonIcon:
                        icon: "cog"
                    MDButtonText:
                        text: "Paramètres"

        MDButton:
            style: "filled"
            pos_hint: {"center_x": 0.94, "center_y": 0.5}
            on_release: app.root.current = "login"
            theme_bg_color: "Custom"
            md_bg_color: "brown"
            MDButtonIcon:
                icon: "location-exit"
            MDButtonText:
                text: "Déconnexion"